<?xml version="1.0" encoding="UTF-8" ?>
<mapping-instructions 
  xmlns="http://www.le-tex.de/namespace/xml2idml"
  xmlns:xml2idml="http://www.le-tex.de/namespace/xml2idml"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
  xmlns:htmltable="http://www.le-tex.de/namespace/htmltable"
  xpath-default-namespace="http://docbook.org/ns/docbook"
  retain-tagging="false">

  <Discard>
    
    <mapping-instruction>
      <path>*[@css:display eq 'none']</path>
    </mapping-instruction>

    <mapping-instruction>
      <path>hub/info</path>
    </mapping-instruction>

  </Discard>

  <Stories keep-xml-space-preserve="true">

    <mapping-instruction>
      <path>hub</path>
      <name>main</name>
    </mapping-instruction>

  </Stories>

  <ParaStyles>

    <mapping-instruction>
      <path priority="-3">para</path>
      <format>Standard</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'berschrift1']</path>
      <format>H1</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'berschrift2']</path>
      <format>H2</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'berschrift3']</path>
      <format>H3</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'berschrift4']</path>
      <format>H4</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'berschrift5']</path>
      <format>H5</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'Listenabsatz'][phrase[@role eq 'hub:identifier']]</path>
      <format>Itemlist</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'Listenabsatz'][not(phrase[@role eq 'hub:identifier'])]</path>
      <format>Itemlist_Continued</format>
    </mapping-instruction>

    <mapping-instruction>
      <path priority="-1">para[preceding-sibling::*[1][self::para[matches(@role, '^berschrift\d$')]]]</path>
      <format>Standard_NoIndent</format>
    </mapping-instruction>

    <mapping-instruction>
      <path priority="-1">para[preceding-sibling::*[1][self::para[matches(@role, '^Listenabsatz')]]]</path>
      <format>Standard_Space_Top</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[mediaobject]</path>
      <format>Figure</format>
    </mapping-instruction>

    <mapping-instruction>
      <path>para[@role eq 'Beschriftung']</path>
      <format>Figure_Legend</format>
    </mapping-instruction>

  </ParaStyles>

  <InlineStyles>

    <mapping-instruction>
      <path>tab</path>
      <insert-special-char name="tabulator" method="replace" />
    </mapping-instruction>


    <mapping-instruction>
      <path>phrase[@role eq 'Hyperlink']</path>
      <format>Hyperlink</format>
    </mapping-instruction>
  </InlineStyles>

</mapping-instructions>
