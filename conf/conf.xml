<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://transpect.le-tex.de/book-conversion/converter/schema/transpect-conf.rng" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="../pubcoach/schema/transpect-conf.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<conf xmlns="http://www.le-tex.de/namespace/transpect"
  content-base-uri="http://unionsverlag.com/content-repo/" 
  paths-xsl-uri="http://customers.le-tex.de/generic/book-conversion/adaptions/common/xsl/trdemo-paths.xsl">
  <cascade>
    <!-- the following names are reserved in order to prevent obstacles with existing libraries -->
    <reserved name="css"/>
    <reserved name="epubtools"/>
    <reserved name="evolve-hub"/>
    <reserved name="fonts"/>
    <reserved name="htmlreports"/>
    <reserved name="htmltemplates"/>
    <reserved name="hub2html"/>
    <reserved name="hub2dbk"/>
    <reserved name="hub2tei"/>
    <reserved name="metadata"/>
    <reserved name="schematron"/>
    <reserved name="styles"/>
    <reserved name="tei2html"/>
    <reserved name="xpl"/>
    <reserved name="xsl"/>
    <clade role="vendor" name="trdemo">
      <clade role="publisher" name="haufe" content-base-uri="http://www.le-tex.de/transpect-demo/content/letex">
        <clade role="series" name="steuerjahrbuch">
          <clade role="production-line" name="indesign">
            <content role="work"/>
          </clade>
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
      <clade role="publisher" name="letex" content-base-uri="http://www.le-tex.de/transpect-demo/content/letex">
        <clade role="series" name="standard">
          <clade role="production-line" name="indesign">
            <content role="work"/>
          </clade>
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
      <clade role="publisher" name="campus" content-base-uri="http://www.le-tex.de/transpect-demo/content/campus">  
        <clade role="series" name="as">
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
    </clade>

  </cascade>
</conf>