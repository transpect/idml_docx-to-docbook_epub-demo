<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://transpect.io/cascade/schema/cascade.rng" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<?xml-model href="http://transpect.io/cascade/schema/cascade.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<conf xmlns="http://transpect.io"
  content-base-uri="http://www.le-tex.de/transpect-demo/content/" 
  paths-xsl-uri="http://this.transpect.io/a9s/common/xsl/trdemo-paths.xsl">
  <cascade>
    <!-- the following names are reserved in order to prevent obstacles with existing libraries -->
    <reserved name="css"/>
    <reserved name="epubtools"/>
    <reserved name="evolve-hub"/>
    <reserved name="fonts"/>
    <reserved name="htmlreports"/>
    <reserved name="htmltemplates"/>
    <reserved name="hub2html"/>
    <reserved name="hub2dbk"/>
    <reserved name="hub2tei"/>
    <reserved name="metadata"/>
    <reserved name="schematron"/>
    <reserved name="styles"/>
    <reserved name="xpl"/>
    <reserved name="xsl"/>
    <clade role="vendor" name="trdemo">
      <clade role="publisher" name="haufe" content-base-uri="http://www.le-tex.de/transpect-demo/content/haufe">
        <clade role="series" name="steuerjahrbuch">
          <clade role="production-line" name="indesign">
            <content role="work"/>
          </clade>
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
      <clade role="publisher" name="le-tex" content-base-uri="http://www.le-tex.de/transpect-demo/content/le-tex">
        <clade role="series" name="standard">
          <clade role="production-line" name="indesign">
            <content role="work"/>
          </clade>
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
        <clade role="series" name="brochure">
          <clade role="production-line" name="indesign">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
      <clade role="publisher" name="campus" content-base-uri="http://www.le-tex.de/transpect-demo/content/campus">  
        <clade role="series" name="as">
          <clade role="production-line" name="word">
            <content role="work"/>
          </clade>
        </clade>
      </clade>
    	<clade role="publisher" name="morgana" content-base-uri="http://www.le-tex.de/transpect-demo/content/morgana">  
        <clade role="series" name="paper">
        	<param name="dbk-top-level-element-name" value="article"/>
        	<content role="work"/>
        </clade>
      </clade>
    </clade>
  </cascade>
</conf>
